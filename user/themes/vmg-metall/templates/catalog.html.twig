{% embed 'default.html.twig' %}

	{% set collection = page.collection( ) %}

	{% block content %}
		<section class="s-catalog uk-section uk-section-default">
			<div class="uk-container">
				<div class="uk-grid-divider" uk-grid="">
					<div class="s-catalog-content uk-width-4-5@l uk-width-3-4@m uk-width-2-3@s">
						{% for child in collection %}
							{% include 'partials/catalog_card.html.twig' with { 'blog': page, 'page': child, 'truncate': true } %}

						{% endfor %}

					</div>
					<div class="s-sidedar uk-width-1-5@l uk-width-1-4@m uk-width-1-3@s uk-visible@s">
						<ul class="uk-nav uk-nav-default">
							<li class="uk-nav-header">Каталог</li>
							<li class="uk-nav-divider"></li>
							{% set side_nav = page
								.find( '/catalog' )
								.children %}
							{% for subnav in side_nav %}
								{% set current_page = ( subnav.active )
									? 'uk-active'
									: '' %}
								{% if subnav.published == 1 %}
									<li class="{{current_page}}">
										<a href="{{ subnav.url }}">{{ subnav.title }}</a>
									</li>
								{% endif %}
							{% endfor %}
						</ul>
					</div>
				</div>
			</div>
		</section>

	{% endblock %}

{% endembed %}
